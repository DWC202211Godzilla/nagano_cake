<div class="container">
  <h2 class="mt-5 ml-5 gray">注文履歴一覧</h2>
  <div class="row">
    <div class="col-12 mt-3">
      <table class="table table-active table-bordered">
        <tr>
          <td class="border border-dark">注文日</td>
          <td class="border border-dark">配送先</td>
          <td class="border border-dark">注文商品</td>
          <td class="border border-dark">支払金額</td>
          <td class="border border-dark">ステータス</td>
          <td class="border border-dark">注文詳細</td>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <td class="border border-dark table-light"><%= order.created_at.strftime("%Y/%m/%d") %></td>
            <td class="border border-dark table-light">
              <%= order.postal_code %><br>
              <%= order.address %><br>
              <%= order.name %>
            </td>
            <td class="border border-dark table-light">
              <% order.order_details.each do |detail| %>
                <%= detail.item.name %>
              <% end %>
            </td>
            <td class="border border-dark table-light"><%= order.total_payment %></td>
            <td class="border border-dark table-light">
              <%= render "public/orders/status" , order: order %>
            </td>
            <td class="border border-dark table-light">
              <%= link_to "表示する", order_path(order), class: "btn btn-sm btn-primary" %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>