<h4 class="mt-3">配送先登録 / 一覧</h4>

<!--住所登録フォーム-->
<%= form_with model: @address, url: addresses_path, method: :post do |f| %>
<div class="form-group">
  <label for="post_code">郵便番号</label><br>
  <%= f.text_field :post_code %>
</div>
<div class="form-group">
  <lavbel for="addresses">住所</lavbel><br>
  <%= f.text_area :addresses %>
</div>
<div class="form-group">
  <label for="address_name">宛名</label><br>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.submit '新規登録', class: "btn btn-sm btn-success" %>
</div>
<% end %>


<!--住所一覧-->
<table border="1">
  <thead>
    <tr bgcolor="gray">
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.post_code %></td>
      <td><%= address.addresses %></td>
      <td><%= address.name %></td>
      <td><%= link_to "編集する", edit_address_path(@address), class: "btn btn-sm btn-succsess" %>  <%= link_to "削除する", address_path(@address),class: "btn btn-sm btn-danger",method: :delete, "date-confirm" => "本当に削除しますか" %></td>
    </tr>
    <% end %>
  </tbody>
</table>