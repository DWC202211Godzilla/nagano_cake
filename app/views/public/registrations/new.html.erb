<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

  <div class="field">
    <tr>
      <th><%= f.label :family_name,"姓" %></th><th><%= f.label :personal_name,"名" %><th>
    </tr>
    <tr>
      <td><%= f.text_field :family_name %></td><td><%= f.text_field :personal_name %></td>
    </tr>
  </div>

  <div class="field">
    <tr>
      <th><%= f.label :family_name_kana,"姓(カナ)" %></th><th><%= f.label :personal_name_kana,"名(カナ)" %><th>
    </tr>
    <tr>
      <td><%= f.text_field :family_name_kana %></td><td><%= f.text_field :personal_name_kana %></td>
    </tr>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
  <%= f.label :post_code,"郵便番号" %><br>
  <%= f.text_field :post_code %>
  </div>

   <div class="field">
  <%= f.label :address,"住所" %><br>
  <%= f.text_field :address %>
  </div>

  <div class="field">
  <%= f.label :phone_number,"電話番号" %><br>
  <%= f.text_field :phone_number %>
  </div>


  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
