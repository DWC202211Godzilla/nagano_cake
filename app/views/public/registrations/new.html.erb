<h2>Sign up</h2>


<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>


  <div class="field">
    <%= f.label :family_name,"姓" %><%= f.label :personal_name,"名" %>
    <%= f.text_field :family_name %><%= f.text_field :personal_name %>
  </div>

  <div class="field">
    <%= f.label :family_name_kana,"姓(カナ)" %><%= f.label :personal_name_kana,"名(カナ)" %>
    <%= f.text_field :family_name_kana %><%= f.text_field :personal_name_kana %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>


  <div class="field">
  <%= f.label :post_code,"郵便番号" %><br>
  <%= f.text_field :post_code %>
  </div>

  <div class="field">
  <%= f.label :address,"住所" %><br>
  <%= f.text_field :address %>
  </div>

  <div class="field">
  <%= f.label :phone_number,"電話番号" %><br>
  <%= f.text_field :phone_number %>
  </div>



  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>

<%= render "public/shared/links" %>
