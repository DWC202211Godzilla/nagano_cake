<div class="login_top">
  <h5 class="gray">ログイン</h5>
</div>
<div class="login_second">
  <h6>会員の方はこちらからログイン</h6>
</div>

<%= form_with model: @customer, url: session_path(resource_name), local: true do |f| %>

  <table class="login_items">
    <tr>
      <th><%= f.label :email,"メールアドレス" %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" , class:"login_item" %></td>
    </tr>
    <tr>
      <th><%= f.label :password,"パスワード" %></th>
      <td><%= f.password_field :password, autocomplete: "current-password", class:"login_item" %></td>
    </tr>
    <tr>
      <th></th>
      <td class="login_button"><button class="btn btn-primary" type="submit">ログイン</button></td>
    </tr>
  </table>
<% end %>

<div class="login_second">
  <h6 class="gray">会員登録がお済みでない方</h6>
</div>
<div class="login_items"><%= link_to "こちら", new_customer_registration_path %>から新規登録を行ってください。</div>

<%#= render "public/shared/links" %>
