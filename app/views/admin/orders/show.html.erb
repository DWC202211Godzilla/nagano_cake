<div class="container">
  <h2 class="mt-5 ml-5">注文履歴一覧</h2>
  <div class="row mt-5">
    <div class="col-12">
      <table class="table table-active">
        <tr>
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <td class="table-light">
              <%= link_to admin_order_path(order), method: :patch, class: "text-dark" do %>
                <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
              <% end %>
              </td>
            <td class="table-light"><%= order.order_details.count %></td><!--　←多分違う　-->
            <td class="table-light">
              <% if order.status == "waiting" %>
                入金待ち
              <% elsif order.status == "paid_up" %>
                入金確認
              <% elsif order.status == "preparing" %>
                製作中
              <% elsif order.status == "shipped" %>
                発送準備中
              <% else %>
                発送済み
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="text-center">
      <%= paginate @orders %>
    </div>
  </div>
</div>