<div class="container">
  <h2 class="mt-5 ml-5 gray">注文履歴一覧</h2>
  <div class="row mt-5">
    <div class="col-12">
      <table class="table table-active">
        <tr>
          <th>購入日時</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
            <td class="table-light">
              <%= link_to admin_order_path(order), method: :patch, class: "text-dark" do %>
                <%= order.created_at.strftime("%Y/%m/%d %H:%M:%S") %>
              <% end %>
              </td>
            <td class="table-light">
              <% order.order_details.each do |detail| %>
                <% @amount += detail.amount  %>
                <% if detail.amount == nil %>
                  <%= @amount %>
                <% end %>
              <% end %>
            </td>
            <td class="table-light">
              <%= render "public/orders/status" , order: order %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="pager my-5">
      <%#= paginate @orders %>
    </div>
  </div>
</div>