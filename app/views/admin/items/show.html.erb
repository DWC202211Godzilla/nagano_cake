<div class='container'>
  <h4 class="gray">商品詳細</h4>
  <div class='row mt-5'>
    <div class="mx-auto col-5">
        <%= image_tag @item.image, size:"300x300" %>
    </div>
    <div class="mx-auto col-7">
      <table class="table ml-0">
        <tr>
          <td class="border border-0"><h5>商品名</h5></td>
          <td class="border border-0"><%= @item.name %></td>
        </tr>
        <tr>
          <td class="border border-0"><h5>商品説明</h5></td>
          <td class="border border-0"><%= @item.introduction %></td>
        </tr>
        <tr>
          <td class="border border-0"><h5>ジャンル</h5></td>
          <td class="border border-0"><%= @item.genre.name %></td>
        </tr>
        <tr>
          <td class="border border-0">税込価格<br>(税抜価格)</td>
          <td class="border border-0"><%= "#{(@item.price * 1.1).round(ndigits = 0).to_s(:delimited)} (#{(@item.price).round(ndigits = 0).to_s(:delimited)})円" %></td>
        </tr>
        <tr>
          <td class="border border-0"><h5>販売ステータス</h5></td>
          <td class="border border-0">
            <% status=@item.is_active %>
            <% if status==true %>
              <%= "販売中" %>
            <% else %>
              <%= "販売停止中" %>
            <% end %>
          </td>
        </tr>

      </table>
      <div class="mt-5">
        <%= link_to "商品編集", edit_admin_item_path,class: "btn btn-success" %>
      </div>

     </div>
  </div>
</div>